
<h1>  Movies </h1>
<%= button_to "Discover Top 40 Movies"%>

<h3>Search For Movies </h3>
<%= form_with url: "/discover/movies", method: :get, local: true do |f| %>
<%= f.text_field :search %>
<%= f.submit "Search" %>
<% end %>

<% if defined?(@results) %>
<h3>Search Results</h3>
  <% @results.each do |movie| %>
  <br>
    <%= link_to "#{movie[:title]}" %>
    <%= movie[:vote_average] %>
  <% end %>
<% end %> 
